// Prisma schema for benchmarking app
// Matches FastAPI Product model

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  brand       String
  category    String
  price       Float
  currency    String
  stock       Int
  ean         String
  color       String
  size        String
  availability String
  internal_id String

  @@map("product")
}
